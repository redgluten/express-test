<div class="container">

    <form action="" method="POST" enctype="multipart/form-data" role="form" class="col-md-7 col-md-offset-3">
        <legend>Login</legend>

        {{> form-errors }}

        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" name="email" class="form-control" id="" placeholder="toto@rototo.com" required="required">
        </div>

        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" name="password" id="input" class="form-control" required="required" title="" placeholder="********" required="required">
        </div>

        <div class="checkbox">
            <label>
                <input type="checkbox" value="remember">
                Remember
            </label>
        </div>

        <button type="submit" class="btn btn-primary">Login</button>
    </form>
</div>
